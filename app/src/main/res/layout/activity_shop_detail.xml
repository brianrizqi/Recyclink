<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Activities.ShopDetail">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:id="@+id/bg_green"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/source_bold"
                android:text="Detail Belanjaku"
                android:textColor="@color/colorWhite"
                android:textSize="30dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/cloud"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/cloud" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/bg_green"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/imgShopDetail"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        tools:src="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/txtShopDetailTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/imgShopDetail"
                        android:fontFamily="@font/source_semi"
                        android:textColor="@color/colorBlack"
                        android:textSize="18dp"
                        tools:text="Judul" />

                    <TextView
                        android:id="@+id/txtShopDetailDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtShopDetailTitle"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/imgShopDetail"
                        android:fontFamily="@font/source_reg"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        tools:text="3 Oktober 2019" />

                    <TextView
                        android:id="@+id/txtShopDetailQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtShopDetailDate"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/imgShopDetail"
                        android:fontFamily="@font/source_reg"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        tools:text="3 Buah" />

                    <TextView
                        android:id="@+id/txtShopDetailPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtShopDetailQuantity"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/imgShopDetail"
                        android:fontFamily="@font/source_reg"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"
                        tools:text="Rp. 120.000" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/txtShopDetailUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/source_reg"
                        android:textColor="@color/colorBlack"
                        android:textSize="17dp"
                        tools:text="Penerima : Diah" />

                    <TextView
                        android:id="@+id/txtShopDetailAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/source_reg"
                        android:textColor="@color/colorBlack"
                        android:textSize="17dp"
                        tools:text="Alamat : UNEJ" />

                    <TextView
                        android:id="@+id/txtShopDetailStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/source_reg"
                        android:textColor="@color/colorBlack"
                        android:textSize="17dp"
                        tools:text="Status : Dalam Perjalan" />

                    <TextView
                        android:id="@+id/txtShopDetailCourier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/source_reg"
                        android:textColor="@color/colorBlack"
                        android:textSize="17dp"
                        tools:text="Jenis Kurir : JNE" />

                    <TextView
                        android:id="@+id/txtShopDetailResi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/source_reg"
                        android:textColor="@color/colorBlack"
                        android:textSize="17dp"
                        tools:text="No Resi : 9102830321" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorPrimary"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/source_semi"
                        android:text="Konfirmasi Penerimaan"
                        android:textColor="@color/colorWhite" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/colorTransparant"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorTransparant"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/source_semi"
                        android:text="Batalkan"
                        android:textColor="@color/colorPrimary" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>